{
    "preset": "jest-puppeteer",
    "testEnvironment": "node",
    "transform": {
        "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
        "ts",
        "js",
        "json",
        "node"
    ],
    "testMatch": [ "**/tests/**/*.[jt]s?(x)", "**/?(*.)+(spec|test).[jt]s?(x)" ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
        "src/**/*.{ts,js}",
        "!src/**/*.d.ts"
    ],
    "coverageReporters": [
        "json-summary",
        "text",
        "lcov"
      ],
    "collectCoverage": true
}